@model List<API_PRACTICA3_MVC.Models.Post>

@{
    ViewData["Title"] = "Noticias";
}

<h2>Noticias recientes</h2>

@if (Model == null || !Model.Any())
{
    <p>No hay publicaciones disponibles.</p>
}
else
{
    <ul>
@foreach (var post in Model)
{
    <li class="mb-4">
        <h4>@post.Title</h4>
        <p>
            @(string.IsNullOrWhiteSpace(post.Body)
                ? "(sin contenido)"
                : (post.Body.Length > 100
                    ? post.Body.Substring(0, 100) + "..."
                    : post.Body))
        </p>
        <a class="btn btn-primary" asp-action="Detalle" asp-route-id="@post.Id">Leer m√°s</a>
    </li>
}
</ul>

}
